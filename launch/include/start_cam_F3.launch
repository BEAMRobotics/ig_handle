<launch>
   <!-- Determine this using rosrun spinnaker_camera_driver list_cameras.
       If not specified, defaults to first camera found. -->
  <arg name="camera_name"               default="F3" />
  <arg name="camera_serial"             default="19194267" />
  <arg name="calibrated"                default="0" />

  <group ns="$(arg camera_name)">
    <!-- Nodelet manager -->
    <node pkg="nodelet" type="nodelet" name="$(arg camera_name)_nodelet_manager" args="manager" cwd="node" output="screen"/>

    <!-- Camera nodelet -->
    <node pkg="nodelet" type="nodelet" name="spinnaker_camera_nodelet"
          args="load spinnaker_camera_driver/SpinnakerCameraNodelet $(arg camera_name)_nodelet_manager" >

      <param name="frame_id"                        value="camera" />
      <param name="serial"                          value="$(arg camera_serial)" />

      <!-- triggering options provided in config/ -->
      <rosparam command="load" file="$(find ig_handle)/config/ig_handle_flir_config.yaml" />

      <!-- Use the camera_calibration package to create this file -->
      <param name="camera_info_url" if="$(arg calibrated)"
             value="file://$(env HOME)/.ros/camera_info/$(arg camera_serial).yaml" />
    </node>

    <!-- Restamping nodelet -->
    <node pkg="nodelet" type="nodelet" name="camera_restamp_nodelet"
      args="load ig_handle/camera_restamp_nodelet $(arg camera_name)_nodelet_manager" >
      <param name="max_buffer_size" value="50"/>
      <param name="data_topic" value="/$(arg camera_name)/image_raw"/>
      <param name="time_topic" value="/$(arg camera_name)/cam_time"/>
    </node>


    <!-- Debayering nodelet -->
    <node pkg="nodelet" type="nodelet" name="image_proc_debayer"
          args="load image_proc/debayer $(arg camera_name)_nodelet_manager">
    </node>
  </group>
</launch>