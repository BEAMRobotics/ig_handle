<launch>
    <!-- Start ros serial -->
    <include file="$(find ig_handle)/launch/include/start_rosserial.launch" />

    <arg name="delay" default="5.0" />  
    <node name="ig_handle_start_handle" pkg="ig_handle" type="start_handle.sh" output="screen" launch-prefix="bash -c 'sleep $(arg delay); $0 $@' "/>

    <arg name="output" default="~/bags"/>
    <node name="ig_handle_collect_bag" pkg="ig_handle" type="record_raw.sh" output="screen" args="$(arg output)"/>
</launch>
